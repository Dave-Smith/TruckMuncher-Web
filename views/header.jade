header#header(data-ng-controller='headerCtrl', data-ng-cloak)
    #logo-group
        // PLACE YOUR LOGO HERE
        span#logo
            img(src='img/logo.png', alt='SmartAdmin')
    .pull-right
        .btn-header.pull-right.transparent(data-ng-show='loggedIn()')
            span
                a(href="/logout", title='Sign Out')
                    i.fa.fa-sign-out
        .btn-header.pull-right.transparent(data-ng-hide='loggedIn()')
            span
                a(href="/logout", title='Sign In')
                    i.fa.fa-sign-in
            // end logout button
            #hide-menu.transparent.btn-header.pull-right
                span
                    a(href='javascript:void(0);', data-ng-click='toggleMenu()', title='Toggle Menu')
                        i.fa.fa-reorder
