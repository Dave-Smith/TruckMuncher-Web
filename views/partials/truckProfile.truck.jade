.col-xs-12.col-sm-12.col-md-offset-2.col-md-8.col-lg-offset-2.col-lg-8(data-ng-show="!selectedTruck.id")
    .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
        header
            h2 Welcome!
        section
            .col-lg-12.col-md-12.col-sm-9
                fieldset(class="form-group")
                    section
                        article.col-xs-12.col-lg-12(style="font-size:2em; text-align:center; padding: 25px;") Please select a truck from the left to view its profile!

.row
    .col-xs-12.col-md-4.col-md-offset-1(data-ng-show="selectedTruck.id")
        .row
            article
                .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                    header
                        h2 Main Profile
                    section
                        .col-lg-8.col-md-12.col-sm-12
                            img(data-ng-src='{{selectedTruck.imageUrl}}', style='width:315px; height:315px; border-radius: 50%;')
                        .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-9
                            fieldset(class="form-group")
                                section
                                    label.control-label.txt-color-black(style="font-size: 3em;", for='truckName') {{selectedTruck.name}}
                                section
                                    span(data-ng-repeat="keywords in selectedTruck.keywords")
                                        span(data-ng-if="$first") {{keywords}}
                                        span(data-ng-if="$index > $first") , {{keywords}}

        .row(data-ng-show='isOnline')
            article
                .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                    header
                        h2 We are online!
                    section
                        .row.col-md-10.col-md-offset-1
                            article(data-ng-style="{'height': '{{mapHeight}}'}")
                                ui-gmap-google-map(center="map.center", zoom="map.zoom", draggable="true", options="map.options")
                                    ui-gmap-marker(data-ng-if='selectedTruck.id', idKey='selectedTruck.id', coords='truckCoords', icon='icon')
                                        ui-gmap-window(coords='truckCoords', show='locationWindow.show', options='{"content": "You found us!"}')


        .row
            article
                .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                    header
                        h2 About the Truck
                    section
                        .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-9
                            fieldset(class="form-group")
                                section
                                    label.control-label.txt-color-black(for='truckName') {{selectedTruck.description}}


    .col-xs-12.col-md-6(data-ng-show="selectedTruck.id")
        article
            .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                header
                    h2 Menu
                section
                    .col-lg-12.col-md-12.col-sm-9
                        fieldset(class="form-group")
                            section
                                .jarviswidget.background-white-transparent(data-customer-menu='' data-custom-menu-colors='customMenuColors' data-menu='menu')