div(data-ng-controller='navCtrl')
    .tm-main
        #wrapper
            #sidebar-wrapper.bg-color-mold
                .container-fluid.make-space-for-logo.ignore-padding-right
                    <div data-ng-include="'/partials/shared/panelLeftMenu.jade'"></div>
                    div.col-xs-12
                        .input-group
                            input.form-control
                            span.input-group-btn
                                button.btn.bg-color-pink.txt-color-white(type='button') Search
                        div.overflow-auto.container-fluid(data-ng-repeat='marker in truckMarkers')
                            .row.pointer(data-ng-click="showMarkerWindow(marker.id)")
                                .col-xs-3
                                    img(data-ng-src='{{marker.truckProfile.imageUrl}}' style='width:50px; height:50px;')
                                .col-xs-9
                                    div
                                        b {{marker.truckProfile.name}}
                                    div {{marker.truckProfile.keywords | json}}
                            .row
                                hr

            #top-nav-wrapper
                <div data-ng-include="'/partials/nav.jade'"></div>

            #content.container-fluid
                .row(style="padding-top: 50px")
                    article(data-ng-style="{'height': '{{mapHeight}}'}")
                        ui-gmap-google-map(center="map.center", zoom="map.zoom", draggable="true", options="map.options", data-ng-style="{'height': '{{mapHeight}}'}")
                            ui-gmap-marker(data-ng-repeat='marker in truckMarkers', idKey='marker.id', coords="marker.coords", icon="marker.icon", data-click='showMarkerWindow(marker.id)' )
                                ui-gmap-window(data-show='marker.show', templateUrl='"/partials/map/infoWindow.jade"', templateParameter='{marker: marker, showMenuCallback: showMenuModal}')
