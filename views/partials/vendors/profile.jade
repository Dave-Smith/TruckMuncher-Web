#wrapper
    #sidebar-wrapper.bg-color-mold
        .container-fluid.make-space-for-logo.ignore-padding-right.more-padding-left
            div(data-ng-include="'/partials/shared/panelLeftMenu.jade'")
            .row.add-space-sidelabel
                article.col-xs-12.col-sm-12
                    div.form-group.txt-color-white
                        label(for='truckList') Profile for Truck:
                        select.form-control(id='truckList', data-chosen='', data-ng-model='selectedTruck', ng-options='truck as truck.name for truck in trucks')
                    div.form-group.pull-right
                        a.btn.btn-pink(data-ng-click='createTruck()', data-ng-disabled='requestInProgress') Create New Truck

    #top-nav-wrapper
        div(data-ng-include="'/partials/nav.jade'")

    #page-content-wrapper.tm-main
        #content.container-fluid
            .row(data-ng-show='selectedTruck !== null' data-ng-cloak)
                .col-xs-12.col-md-6.col-md-offset-1
                    article
                        .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                            header
                                h2 Main Profile
                            form(data-ng-submit='submit()').background-transparent
                                .col-xs-12.form-group
                                    img.img-circle.img-responsive.pointer(data-toggle="tooltip" data-placement="right" data-bootstrap-tooltip data-ng-hide='imageLoading', data-ng-src='{{displayImage}}', alt='Change Profile Picture', title='Change Profile Picture'
                                    image-loader='', data-mysrc='displayImage', data-is-loading='imageLoading' data-ng-click='changeProfilePicture()')
                                    button.btn.bg-color-mold.txt-color-white(type='button' data-ng-click="changeProfilePicture()" data-ng-if='!selectedTruck.imageUrl') Upload Profile Picture
                                .col-xs-12
                                    fieldset(class="form-group")
                                        section
                                            label.control-label(for='truckName') Truck Name
                                            input.form-control(id='truckName', data-ng-model='newName')
                                        section
                                            label.control-label(for='keywords') Keywords
                                            tags-input(id='keywords', data-ng-model='tags')
                                    div(style="float:right")
                                        button.btn.bg-color-mold.txt-color-white.submit-button.more-padding-left.more-padding-right(data-ng-disabled='requestInProgress', type='submit') Submit
                .col-xs-12.col-md-4
                    article
                        .jarviswidget.jarviswidget-color-blueDark
                            header
                                h2 Color Customization
                            section
                                .container-fluid.background-white-transparent
                                    .form-group
                                        label
                                            b Color Selection For:
                                        .smart-form
                                            .inline-group
                                                label.radio
                                                    input(type="radio" value="primary" name="whichColor" data-ng-model="selectingColor")
                                                    i
                                                    = 'Primary'
                                                label.radio
                                                    input(type="radio" value="secondary" name="whichColor" data-ng-model="selectingColor")
                                                    i
                                                    = 'Secondary'
                                    spectrum-colorpicker(data-ng-model="colorPicker.color" on-change="selectColor(color)")
                                    .widget-body
                                        div(data-ng-if='selectedTruck')
                                            label
                                                b Colors From Profile Image
                                            div(data-ng-if='selectedTruck && !selectedTruck.imageUrl')
                                                .alert.alert-info
                                                    span You have not uploaded a profile image yet
                                        div.ignore-height(data-remote-image-analyzer='', data-image-url='selectedTruck.imageUrl', data-color-click-callback='selectColor(theColor)')
