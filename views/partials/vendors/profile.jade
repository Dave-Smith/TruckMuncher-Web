.row
    article.col-xs-12.col-md-3.col-md-offset-3
        div.form-group
            label(for='truckList') Profile for Truck:
            select.form-control(id='truckList', data-chosen='', data-ng-model='selectedTruck', ng-options='truck as truck.name for truck in trucks')
.row
    .col-xs-12.col-md-6.col-md-offset-3
        .well.no-padding
            form.smart-form(data-ng-submit='submit()')
                header Registration is Free
                fieldset
                    section
                        label.control-label(for='truckName') Truck Name
                        .input
                            input(id='truckName', data-ng-model='selectedTruck.name')
                    section
                        label.control-label(for='image') Image Url
                        .input
                            input(id='image', data-ng-model='selectedTruck.imageUrl')
                    section
                        label.control-label(for='keywords') Keywords
                        tags-input(id='keywords', data-ng-model='tags')
                footer
                    button.btn.btn-primary(data-ng-disabled='requestInProgress') Submit
