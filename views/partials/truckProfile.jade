#wrapper
   #sidebar-wrapper.bg-color-mold
      .container-fluid.make-space-for-logo.ignore-padding-right
         <div data-ng-include="'/partials/shared/panelLeftMenu.jade'"></div>
         div.col-xs-12(style="padding-top: 30px;")
            .input-group.form-group
               input.form-control(data-ng-model='searchQuery', data-ng-keyup="searchQuery.length > 0 && $event.keyCode == 13 && searchTrucks(searchQuery)")
               span.input-group-btn
                  button.btn.bg-color-pink.txt-color-white(type='button', data-ng-disabled='loading', data-ng-click='searchTrucks(searchQuery)') Search
            .progress(data-ng-show='loading')
               .progress.progress-striped.active
                  .progress-bar.indeterminate.bg-color-darken(role='progressbar') Searching for Trucks
            div.overflow-auto.container-fluid(data-ng-if='allTrucks.length == 0')
               .row.pointer
                  .col-xs-12.text-align-center
                     div
                        b There are no results!
               .row
                  hr
            div.overflow-auto.container-fluid(data-ng-repeat='truck in allTrucks')
               .row.pointer(data-ng-click="onProfileClicked(truck)")
                  .col-xs-3
                     img(data-ng-src='{{truck.truckProfile.imageUrl}}' style='width:50px; height:50px;')
                  .col-xs-9
                     div
                        b {{truck.truckProfile.name}}
                     span(data-ng-repeat="keywords in truck.truckProfile.keywords")
                        span(data-ng-if="$first") {{keywords}}
                        span(data-ng-if="$index > $first") , {{keywords}}
               .row
                  hr

   #top-nav-wrapper
      <div data-ng-include="'/partials/nav.jade'"></div>

   #page-content-wrapper.tm-main
      #content
         .row
            .col-xs-12.col-md-4.col-md-offset-1
               article
                  .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                     header
                        h2 Main Profile
                        .col-lg-8.col-md-12.col-sm-12
                           div(data-profile-image-upload='', data-truck='selectedTruck')
                        .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-9
                           fieldset(class="form-group")
                              section
                                 label.control-label.txt-color-black(for='truckName') {{selectedTruck.truckProfile.name}}
                              section
                                 label.control-label.txt-color-black(for='keywords') {{selectedTruck.truckProfile.keywords}}

            .col-xs-12.col-md-4.col-md-offset-1
               article
                  .jarviswidget.jarviswidget-color-blueDark.tm-jarviswidget.background-white-transparent
                     header
                        h2 Menu
                        .col-lg-10.col-lg-offset-1.col-md-10.col-md-offset-1.col-sm-9
                           fieldset(class="form-group")
                              section
                                 label.control-label.txt-color-black(for='truckName') {{menu}}
                              section
                                 label.control-label.txt-color-black(for='keywords') {{selectedTruck.truckProfile.keywords}}