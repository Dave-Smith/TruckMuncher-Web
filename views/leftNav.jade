// Left panel : Navigation area
// Note: This width of the aside area can be adjusted through LESS variables

nav.navbar.navbar-default(ng-cloak='ng-cloak', data-ng-controller='navCtrl')
    .container-fluid
        .navbar-header
            .visible-xs.btn-header.pull-right(data-ng-show='loggedIn()')
                span
                    a(href="/logout", title='Sign Out')
                        i.fa.fa-sign-out
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .navbar-brand
                span#logo
                    img(src='img/logo.png', alt='TruckMuncher')

        #navbar-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav

                li(ui-sref-active="active", style="text-align:center")
                    a(data-ui-sref='home', title='Home')
                        i.fa.fa-lg.fa-fw.fa-home
                        span.menu-item-parent Home

                li(ui-sref-active="active", data-ng-show='loggedIn()', style="text-align:center")
                    a(data-ui-sref='vendorProfile')
                        i.fa.fa-lg.fa-fw.fa-truck
                        span.menu-item-parent Profile

                    ul
                        li
                            a test sub menu

                li(ui-sref-active="active", data-ng-show='loggedIn()', style="text-align:center")
                    a(data-ui-sref='menu')
                        i.fa.fa-lg.fa-fw.fa-bars
                        span.menu-item-parent My Menu
                li(ui-sref-active="active")
                    a(data-ui-sref='map')
                        i.fa.fa-lg.fa-fw.fa-map-marker
                        span.menu-item-parent Map

            ul.nav.navbar-nav.navbar-right.hidden-xs
                li
                    .btn-header(data-ng-show='loggedIn()')
                        span
                            a(href="/logout", title='Sign Out')
                                i.fa.fa-sign-out
                    .btn-header(data-ng-hide='loggedIn()')
                        span
                            a(href="/logout", title='Sign In')
                                i.fa.fa-sign-in
